@incollection{Hikosaka2016,
  title = {Trait-{{Based Approaches}} for {{Understanding Species Niche}}, {{Coexistence}}, and {{Functional Diversity}} in {{Subalpine Moorlands}}},
  booktitle = {Structure and {{Function}} of {{Mountain Ecosystems}} in {{Japan}}: {{Biodiversity}} and {{Vulnerability}} to {{Climate Change}}},
  author = {Hikosaka, Kouki and Sasaki, Takehiro and Kamiyama, Chiho and Katabuchi, Masatoshi and Oikawa, Shimpei and Shimazaki, Masaya and Kimura, Hiroshi and Nakashizuka, Tohru},
