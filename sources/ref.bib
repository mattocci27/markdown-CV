  author = {Ashton, Louise A. and Nakamura, Akihiro and Basset, Yves and Burwell, Chris J. and Cao, Min and Eastwood, Rodney and Odell, Erica and {de Oliveira}, Evandro Gama and Hurley, Karen and Katabuchi, Masatoshi and Maunsell, Sarah and Mcbroom, James and Schmidl, J{\"u}rgen and Sun, Zhenhua and Tang, Yong and Whitaker, Terry and Laidlaw, Melinda J. and Mcdonald, William J.F. and Kitching, Roger L.},
  year = {2016},
  month = jan,
  journal = {Journal of Biogeography},
  volume = {43},
